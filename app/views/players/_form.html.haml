= form_for @player do |f|
  - if @player.errors.any?
    #error_explanation
      %h2= "#{pluralize(@player.errors.count, "error")} prohibited this player from being saved:"
      %ul
        - @player.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label t('.name'), :class => "form-label"
    = f.text_field :name
  .field
    = f.label t('.rating'), :class => "form-label"
    = f.number_field :rating
  .field
    = f.label t('.info'), :class => "form-label"
    = f.text_field :info
  .field
    = f.label t('.team'), :class => "form-label"
    = f.collection_select :team_id, Team.all, :id, :name
  .actions
    = f.submit 'Save'
