= form_for @team do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, :class => "form-label"
    = f.text_field :name
  .field
    = f.label :info, :class => "form-label"
    = f.text_field :info
  .field
    = f.label :rank, :class => "form-label"
    = f.number_field :rank
  .actions
    = f.submit 'Save'
